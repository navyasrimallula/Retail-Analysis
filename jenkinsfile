pipeline {
    agent any

    environment {
        LABS = credentials("LabCreds")
    }
    stages 
    {
        stage('Build') {
            steps {
                sh 'python3 -m venv /bitnami/jenkins/home/workspace/tailAnalysisProjectPipeline_main/retail_pipeline_venv/bin/'
                sh '/bitnami/jenkins/home/workspace/tailAnalysisProjectPipeline_main/retail_pipeline_venv/bin/python'
                sh '/bitnami/jenkins/home/workspace/tailAnalysisProjectPipeline_main/retail_pipeline_venv/bin/pipenv install'
                script {
                    echo "Build completed successfully"
                }
            }
        }
        stage('Test') {
            steps {
                sh '/bitnami/jenkins/home/workspace/tailAnalysisProjectPipeline_main/retail_pipeline_venv/bin/pipenv run pytest'
                echo "Test completed successfully"
                }
            }
                    stage('Package') {
            steps {
                sh 'zip -r retailanalysis.zip . -x "retail_pipeline_venv/*"'
                echo "Package completed successfully"
            }
        }
        stage('Deploy') {
            steps {
                sh '''sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r . 
                $LABS_USR@g01.itversity.com:/home/itv014211/retailAnalysis'''
                echo "Deploy completed successfully"
            }
        }
        }
    }



